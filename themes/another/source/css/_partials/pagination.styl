@require "../_vendor/variables"

.pagination
  text-align: center;
  height: 50px;
  padding: 10px;
  display: inline-block;
  position: relative;
  transform: translateX(-50%);
  left: 50%;
  a, span
    text-decoration: none;
    margin: 0 5px;
    display: inline-block;
    width: 3.4rem;
    height: 2rem;
    line-height: 2rem;
    border: 1px solid #ccc;
    color: #666;
    transition: all .4s;
  .extend.prev
    position: absolute;
    transform: translateX(-100%);
    left: 0px;
  .extend.next
    position: absolute;
    transform: translateX(100%);
    right: 0px;
  a:hover
    color: #fff;
    background: color-second;
    border: 1px solid color-second;
  span:hover
    color: #fff;
    background: color-second;
    border: 1px solid color-second;
  .current
    color: color-second;
    border: 1px solid color-second;
  .current:hover
    background: #fff;
    color: color-second;
